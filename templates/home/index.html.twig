{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <h1 class="text-center">Articles</h1>

            {% for article in articles %}
                <div class="card col-sm-4 m-4">
                    <div class="card-inner">
                        <div class="header">
                            <h2>{{ article.name }}</h2>
                            <h3>{{ article.createAt|date("d-m-y") }}</h3>
                        </div>
                        <div class="content">
                            <p class="card-text">{{ article.description }}</p>
                            <a href="{{ path('app_view_article', { id_article: article.id }) }}"
                               class="btn btn-primary">Voir l'article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}
